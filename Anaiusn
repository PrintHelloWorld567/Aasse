<div id="heard"></div>

<button id="startBtn">START</button>

<script>

const objects = [
{name:"apple",img:"https://images.unsplash.com/photo-1567306226416-28f0efdc88ce?w=600"},
{name:"car",img:"https://images.unsplash.com/photo-1494976388531-d1058494cdd8?w=600"},
{name:"chair",img:"https://images.unsplash.com/photo-1519710164239-da123dc03ef4?w=600"},
{name:"phone",img:"https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=600"},
{name:"bottle",img:"https://images.unsplash.com/photo-1523362628745-0c100150b504?w=600"},
{name:"banana",img:"https://images.unsplash.com/photo-1574226516831-e1dff420e12?w=600"},
{name:"keyboard",img:"https://images.unsplash.com/photo-1517336714731-489689fd1ca8?w=600"},
{name:"shoe",img:"https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=600"},
{name:"clock",img:"https://images.unsplash.com/photo-1501139083538-0139583c060f?w=600"},
{name:"lamp",img:"https://images.unsplash.com/photo-1507473885765-e6ed057f782c?w=600"}
];

let current;
let score=0;

const image=document.getElementById("image");
const scoreText=document.getElementById("score");
const status=document.getElementById("status");
const heard=document.getElementById("heard");
const startBtn=document.getElementById("startBtn");

function newObject(){
current=objects[Math.floor(Math.random()*objects.length)];
image.src=current.img;
}

newObject();

startBtn.onclick=()=>{

startBtn.style.display="none";

const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;

const recognition=new SpeechRecognition();

recognition.continuous=true;
recognition.interimResults=true;
recognition.lang="en-US";

status.innerText="Listening...";

recognition.onresult=(event)=>{

const text=event.results[event.results.length-1][0].transcript.toLowerCase();

heard.innerText="Heard: "+text;

if(text.includes(current.name)){

score++;
scoreText.innerText="Score: "+score;

status.innerText="CORRECT!";
status.className="correct";

setTimeout(()=>{
status.innerText="Listening...";
status.className="";
newObject();
},1000);

}

};

recognition.onend=()=>{
recognition.start();
};

recognition.start();

};

</script>

